<h2 class="text-center mt-4" id="article-title"><%= @article.title %></h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-dark rounded">
        <div class="card-header font-italic text-light">
          <%= @article.user.username %>
        </div>
        <div class="card-body">
          <div class="card-text text-left text-light"><%= simple_format(@article.description) %></div>
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-light" %>
          <%= link_to "Delete", article_path(@article), class: "btn btn-outline-light", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
        <div class="card-footer text-light">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
            edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
