<h1 class="text-center mt-4" id="articles-title"><%= @user.username %>'s profile</h1>
<%= gravatar_for @user, size: 100 %>
<% if logged_in? && @user == current_user %>
  <div class= "text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path, class: "btn btn-outline-dark"%>
  </div>
<% end %>
<h3 class="text-center mt-4" id="articles-title">Articles</h3>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article' %>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
